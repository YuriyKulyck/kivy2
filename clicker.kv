                            allow_stretch: True
                            keep_ratio: False
                            pos_hint: {'x': 0, 'center_y':0.5}
                            source: 'vlad-a4-govno-pidaras_261492300_orig_.jpg'
                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}
